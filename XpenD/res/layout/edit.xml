<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <Button
        android:id="@+id/beditexit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/customexit" />

    <Button
        android:id="@+id/bget"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bdelete"
        android:layout_alignBottom="@+id/bdelete"
        android:layout_marginLeft="13dp"
        android:background="@drawable/customget" />

    <Button
        android:id="@+id/bupdate"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/bdelete"
        android:layout_alignBottom="@+id/bdelete"
        android:layout_alignRight="@+id/bcalen"
        android:layout_margin="216dp"
        android:background="@drawable/customupdate" />

    <Button
        android:id="@+id/bdeleteall"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/beditback"
        android:background="@drawable/customcleardb" />

    <Button
        android:id="@+id/beditback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/customback" />

    <EditText
        android:id="@+id/etexpendid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bdelete"
        android:layout_alignRight="@+id/bdelete"
        android:layout_below="@+id/imageView4"
        android:ems="10"
        android:hint="Row_ID"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/beditexit"
        android:layout_centerHorizontal="true"
        android:src="@drawable/expendid" />

    <Button
        android:id="@+id/bcalendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/etexpenddate"
        android:layout_alignRight="@+id/bupdate"
        android:layout_alignTop="@+id/etexpenddate"
        android:background="@drawable/customcalendar" />

    <EditText
        android:id="@+id/etexpendon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etexpend"
        android:layout_toLeftOf="@+id/bcalendar"
        android:layout_toRightOf="@+id/bdeleteall"
        android:ems="10" />

    <EditText
        android:id="@+id/etexpenddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etexpendon"
        android:layout_toLeftOf="@+id/bcalendar"
        android:layout_toRightOf="@+id/bdeleteall"
        android:ems="10" />

    <EditText
        android:id="@+id/etexpend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etexpendid"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/bcalendar"
        android:layout_toRightOf="@+id/imageView1"
        android:ems="10"
        android:inputType="number" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/etexpendon"
        android:layout_toLeftOf="@+id/etexpendid"
        android:src="@drawable/expendrs1" />

    <Button
        android:id="@+id/bdelete"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_above="@+id/bdeleteall"
        android:layout_centerHorizontal="true"
        android:background="@drawable/customdelete" />

    <EditText
        android:id="@+id/etexpenddesc"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/etexpenddate"
        android:layout_toLeftOf="@+id/bcalendar"
        android:layout_toRightOf="@+id/imageView2"
        android:ems="10" />

    <Button
        android:id="@+id/bviewupdated"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_alignBaseline="@+id/bdeleteall"
        android:layout_alignBottom="@+id/bdeleteall"
        android:layout_toLeftOf="@+id/beditexit"
        android:background="@drawable/customview" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@+id/etexpenddate"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:src="@drawable/expendon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/etexpenddesc"
        android:layout_alignRight="@+id/bdeleteall"
        android:src="@drawable/expenddate" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/etexpenddesc"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:src="@drawable/description" />

"

</RelativeLayout>